

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: "fonts/Vampire Wars.ttf"
        text: root.parent.menu_title
        pos_hint: {"center_x": .5 , "center_y": .76}

    Button:
        font_name: "fonts/GODOFWAR.ttf"
        font_size: dp(20)
        text : root.parent.menu_button_title
        pos_hint: {"center_x": .5, "center_y": .38}
        size_hint: .28, .16
        backgriound_normal: " "
        background_color: .1,.3,1,.85
        on_press: root.parent.on_menu_button_pressed()